.container {
    height: 100vh;
    width: 100vw;
}
.blur-view {
    filter: blur(20px);
    position: relative;
    height: 100vh;
    width: 100vw;
}
.container-view {
    position: relative;
    height: 100vh;
    width: 100vw;
    top: -100vh;
}
.audio-player {
    height: 160rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.incident-scroll-view {
    height: calc(100vh - 160rpx);
}
.case-notice {
    display: block;
    width: 90vw;
    height: calc(90vw * 0.64);
    margin: 0 auto;
}
.incident-view {
    width: 90vw;
    margin: 80rpx auto 0;
    border-radius: 5px;
}
.incident-view:last-child {
    padding-bottom: 80rpx;
}
.incident-title {
    color: #0E9DA2;
    font-size: 16px;
    text-align: center;
    line-height: 26px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 5px 5px 0 0;
}

.incident-image {
    display: block;
    width: 90vw;
    height: 50.62vw;
}

.incident-desc {
    box-sizing: border-box;
    width: 90vw;
    padding: 10px;
    background: linear-gradient(180deg, rgba(8, 160, 107, 1), transparent 400%);
    box-shadow: 0 0 8px 2px rgba(0, 0, 0, .3);
    border-radius: 0 0 5px 5px;
    font-size: 14px;
    color: #FFF;
}

.tool-bar {
    width: 100%;
    position: absolute;
    bottom: 40rpx;
    right: 0;
    display: flex;
    flex-direction: column;
    flex-flow: row-reverse;
    justify-content: center;
}

.tool-item {
    display: flex;
    font-size: 12px;
    justify-content: center;
    align-items: center;
    width: 100rpx!important;
    height: 100rpx;
    border-radius: 50%;
    background: #e9f1f6;
    color: #161823;
}

.share-button {
    opacity: 0.7;
}
